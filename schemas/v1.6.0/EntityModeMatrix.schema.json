{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.domainintelligenceschema.org/dis/1.6.0/EntityModeMatrix.schema.json",
  "title": "EntityModeMatrix (v1.6)",
  "description": "v1.6: Defines capabilities of an Entity when operating in a Mode. This version migrates enums to CommonEnums.schema.json.",
  "type": "object",
  "properties": {
    "matrixEntryId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier. (Mandatory)"
    },
    "entityId": {
      "type": "string",
      "format": "uuid",
      "description": "Entity ID. (Mandatory)"
    },
    "modeId": {
      "type": "string",
      "format": "uuid",
      "description": "Mode ID. (Mandatory)"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "interactionCapabilities": {
      "type": "array",
      "description": "Specific capabilities in this mode.",
      "items": {
        "type": "object",
        "properties": {
          "capabilityId": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier. (Mandatory)"
          },
          "capabilityName": {
            "type": "string",
            "description": "Human-readable name. (Mandatory)"
          },
          "stance": {
            "description": "ACT/REACT. (Mandatory)",
            "$ref": "https://schemas.domain-intelligence.org/dis/1.6.0/CommonEnums.schema.json#/definitions/stance"
          },
          "modeOfInteraction": {
            "description": "One of 7 modes. (Mandatory)",
            "$ref": "https://schemas.domain-intelligence.org/dis/1.6.0/CommonEnums.schema.json#/definitions/modeOfInteraction"
          },
          "description": {
            "type": "string",
            "description": "Explanation. (Mandatory)"
          },
          "associatedFunctionIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            },
            "default": []
          }
        },
        "required": [
          "capabilityId",
          "capabilityName",
          "stance",
          "modeOfInteraction",
          "description"
        ]
      },
      "default": []
    },
    "modeSpecificConfiguration": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    },
    "description": {
      "type": "string"
    },
    "primaryKey": {
      "type": "string",
      "default": "matrixEntryId",
      "const": "matrixEntryId"
    },
    "foreignKeys": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "keyName": {
            "type": "string"
          },
          "referencesEntity": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "keyName",
          "referencesEntity"
        ]
      },
      "default": []
    },
    "attributes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/attributeItem"
      },
      "default": []
    },
    "appliedTags": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tagDefinitionId": {
            "type": "string",
            "format": "uuid"
          },
          "selectedValues": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "tagDefinitionId",
          "selectedValues"
        ]
      },
      "default": []
    }
  },
  "required": [
    "matrixEntryId",
    "entityId",
    "modeId"
  ],
  "additionalProperties": false,
  "definitions": {
    "attributeItem": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "value": {
          "type": [
            "string",
            "boolean",
            "integer",
            "number",
            "object",
            "array",
            "null"
          ]
        }
      },
      "required": [
        "name",
        "type",
        "description",
        "value"
      ]
    }
  }
}
