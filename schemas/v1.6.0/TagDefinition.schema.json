{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.domainintelligenceschema.org/dis/1.6.0/TagDefinition.schema.json",
  "title": "TagDefinition (v1.6)",
  "description": "v1.6: Defines a semantic category and its set of allowed values. This version is unchanged from v1.5, aside from its URI.",
  "type": "object",
  "properties": {
    "tagDefinitionId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier. (Mandatory)"
    },
    "categoryName": {
      "type": "string",
      "description": "Category name. (Mandatory)"
    },
    "description": {
      "type": "string"
    },
    "allowedValues": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "description": "Permissible value."
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "value"
        ]
      },
      "minItems": 1
    },
    "multiSelect": {
      "type": "boolean",
      "default": false
    },
    "primaryKey": {
      "type": "string",
      "default": "tagDefinitionId",
      "const": "tagDefinitionId"
    },
    "foreignKeys": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "keyName": {
            "type": "string"
          },
          "referencesEntity": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "keyName",
          "referencesEntity"
        ]
      },
      "default": []
    },
    "attributes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/attributeItem"
      },
      "default": []
    }
  },
  "required": [
    "tagDefinitionId",
    "categoryName",
    "allowedValues"
  ],
  "additionalProperties": false,
  "definitions": {
    "attributeItem": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "value": {
          "type": [
            "string",
            "boolean",
            "integer",
            "number",
            "object",
            "array",
            "null"
          ]
        }
      },
      "required": [
        "name",
        "type",
        "description",
        "value"
      ]
    }
  }
}
