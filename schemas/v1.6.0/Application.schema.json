{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.domainintelligenceschema.org/dis/1.6.0/Application.schema.json",
  "title": "Application (v1.6)",
  "description": "v1.6: A software system/service/platform within the domain. This version migrates enums to CommonEnums.schema.json.",
  "type": "object",
  "properties": {
    "applicationId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier. (Mandatory)"
    },
    "name": {
      "type": "string",
      "description": "Display name. (Mandatory)"
    },
    "description": {
      "type": "string",
      "description": "Purpose/scope. (Mandatory)"
    },
    "version": {
      "type": "string"
    },
    "applicationType": {
      "description": "The classification of the application.",
      "$ref": "https://schemas.domain-intelligence.org/dis/1.6.0/CommonEnums.schema.json#/definitions/applicationType"
    },
    "vendor": {
      "type": "string"
    },
    "primaryKey": {
      "type": "string",
      "default": "applicationId",
      "const": "applicationId"
    },
    "foreignKeys": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "keyName": {
            "type": "string"
          },
          "referencesEntity": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "keyName",
          "referencesEntity"
        ]
      },
      "default": []
    },
    "attributes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/attributeItem"
      },
      "default": []
    },
    "associatedEndpointIds": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "default": []
    },
    "assignedRoleIds": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "default": []
    },
    "appliedTags": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tagDefinitionId": {
            "type": "string",
            "format": "uuid"
          },
          "selectedValues": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "tagDefinitionId",
          "selectedValues"
        ]
      },
      "default": []
    },
    "businessOwner": {
      "type": "string"
    },
    "technicalOwner": {
      "type": "string"
    }
  },
  "required": [
    "applicationId",
    "name",
    "description"
  ],
  "additionalProperties": false,
  "definitions": {
    "attributeItem": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "value": {
          "type": [
            "string",
            "boolean",
            "integer",
            "number",
            "object",
            "array",
            "null"
          ]
        }
      },
      "required": [
        "name",
        "type",
        "description",
        "value"
      ]
    }
  }
}
